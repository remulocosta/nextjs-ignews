# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
editor_format_onSave = true

[*.yaml]
indent_size = 4
singleQuote = false

[*.yml]
indent_size = 2
singleQuote = false
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = true
